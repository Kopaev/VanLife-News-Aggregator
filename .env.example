# ==============================================
# VanLife News Aggregator - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# cp .env.example .env
# ==============================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vanlife_news
DB_USER=vanlife
DB_PASS=your_secure_password

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3
PROMPT_RELEVANCE_TITLE_LIMIT=240
PROMPT_RELEVANCE_SUMMARY_LIMIT=1200
PROMPT_RELEVANCE_MAX_TOKENS=300
PROMPT_TRANSLATE_TITLE_LIMIT=400
PROMPT_TRANSLATE_SUMMARY_LIMIT=1200
PROMPT_TRANSLATE_MAX_TOKENS=300

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://news.vanlife.bez.coffee
APP_TIMEZONE=Europe/Moscow
APP_LOCALE=ru

# Admin Credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Session Settings
SESSION_LIFETIME=86400
SESSION_SECURE=true

# Cron Settings
FETCH_ENABLED=true
PROCESS_ENABLED=true
CLUSTER_ENABLED=true
PROCESS_RELEVANCE_BATCH=10
PROCESS_TRANSLATION_BATCH=10
PROCESS_MODERATION_BATCH=20
CLUSTER_MIN_SIMILARITY=0.55
CLUSTER_CANDIDATE_WINDOW_HOURS=120
CLUSTER_TIME_DECAY_HOURS=72
CLUSTER_SUMMARY_LIMIT=800

# Rate Limiting
GOOGLE_NEWS_DELAY_MS=1000
OPENAI_REQUESTS_PER_MINUTE=20

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
