{
    "name": "vanlife/news-aggregator",
    "description": "News aggregator about vanlife and motorhomes from around the world",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "VanLife Team"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config/config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fetch": "php scripts/fetch_news.php",
        "process": "php scripts/process_news.php",
        "cluster": "php scripts/cluster_news.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
